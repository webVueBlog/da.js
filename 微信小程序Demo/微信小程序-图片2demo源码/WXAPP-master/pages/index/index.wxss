.header-container {
    width: 100%;
    height: 360px;
}

.header-swiper {
    height: 320px;
}

.header-swiper-img {
    width: 100%;
    height: 320px;
}

.header-search-img {
    float: left;
    position: absolute;
    left: 18px;
    width: 60px;
    height: 60px;
    top: 290px;
}

/* 首页item的样式 */
.scroll-view {
    width: 47%;
    height: 220px;

    border-color: #d8d8d8;
    border-width: 0.5px;
    border-style: solid;
}

/* 竖型分割view样式 */
.home-view-sep-ver {
    width: 1.8%;
    height: 220px;
}

/* 横着的分割View样式 */
.home-view-sep-hor {
    width: 100%;
    height: 2px;
}

/* 首页人物封面样式 */
.header-cover-img {
    width: 100%;
    height: 190px;
}

/* 首页中的图片下方昵称效果 */
.home-text-nickname {
    position: relative;
    top: 5px;
    left: 10px;
    width: 60%;
    height: 20px;

    text-align: left;
    vertical-align: middle;

    font-size: 15px;
    -webkit-text-fill-color: black;
    
    overflow: hidden;
    -o-text-overflow: ellipsis;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;

    white-space: nowrap;
}

/* 首页中的图片下方的城市字体样式 */
.home-text-city {
    position: relative;
    top: 7px;
    right: 10px;
    width: 40%;
    height: 20px;

    text-align: right;
    vertical-align: middle;

    font-size: 9px;
    -webkit-text-fill-color: #aaaaaa;

    overflow: hidden;
    -o-text-overflow: ellipsis;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;

    white-space: nowrap;
}

/* 邀请好友的容器视图 */ 
.home-invite-container {
    width: 100%;
    height: 370px;
}


/* 邀请好友标题 */
.home-invite-title {
    position: relative;
    left: 10px;


    width: 100%;
    height: 33px;
    
    padding-top: 22px;
    font-size: 21px;

    white-space: nowrap;
}

/* 邀请好友的封面 */
.home-invite-cover {
    position: relative;
    left: 1.8%;
    width: 96.4%;
    height: 224px;
}

/* 邀请好友的粗体文字内容 */
.home-invite-content {
    position: relative;
    left: 2%;
    top: 15px;

    width: 96%;
    height: 22px;

    font-size: 21px;
}

/* 邀请好友分成比例文字内容 */
.home-invite-subcontent {
    position: relative;
    left: 2%;
    top: 30px;

    width: 96%;
    height: 18px;

    font-size: 15px;
}
