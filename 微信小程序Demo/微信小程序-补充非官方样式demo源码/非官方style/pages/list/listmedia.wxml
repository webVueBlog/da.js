<view class="ui-list">
    <block wx:for-items="{{list}}">
        <navigator id="{{item.id}}" url="{{item.id}}" class="item">
            <view class="widget-cell">
                <view class="cell-hd">
                    <image class="picture" src="{{item.img}}" mode="aspectFill" />
                </view>
                <view class="cell-bd">
                    <text class="name">{{item.title}}</text>
                    <text class="remark">2分钟前</text>
                </view>
            </view>
            <view class="line {{index == 0 ? 'line-first' : ''}}"></view>
        </navigator>
    </block>
</view>